<h1>
  List of all plays playsheets
</h1>

<hr>

<article>
  <header>
    <h2>
      Add a new plays playsheet
    </h2>
  </header>

  <form action="/insert_plays_playsheet" method="post">
    <div>
      <label for="playsheet_id_box">
        Playsheet
      </label>

      <input type="text" id="playsheet_id_box" name="query_playsheet_id">
    </div>

    <div>
      <label for="play_id_box">
        Play
      </label>

      <input type="text" id="play_id_box" name="query_play_id">
    </div>

    <button type="submit">
      Create plays playsheet
    </button>
  </form>
</article>

<hr>

<article>
  <ul>
    <% @list_of_plays_playsheets.each do |a_plays_playsheet| %>
      <li>
        <a href="/plays_playsheets/<%= a_plays_playsheet.id %>">
          Plays playsheet #<%= a_plays_playsheet.id %>
        </a>
      </li>
    <% end %>
  </ul>
</article>

<hr>
